<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Psyche" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:fontFamily">@font/quicksandregular</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.CardView.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Psyche.ActionBar" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:fontFamily">@font/quicksandregular</item>
    </style>

    <style name="Theme.Psyche" parent="Base.Theme.Psyche" />
